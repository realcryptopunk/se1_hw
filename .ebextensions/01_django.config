option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    PYTHONPATH: "/var/app/current/mysite:$PYTHONPATH"

  aws:elasticbeanstalk:container:python:
    WSGIPath: "mysite.wsgi:application"

  aws:autoscaling:launchconfiguration:
    RootVolumeType: gp3
    DisableIMDSv1: true

  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/health"

  aws:autoscaling:trigger:
    MeasureName: CPUUtilization
    Statistic: Average
    Unit: Percent
    Period: "1"
    BreachDuration: "1"
    UpperThreshold: "70"
    LowerThreshold: "30"
    EvaluationPeriods: "1"

container_commands:
  01_create_db_directory:
    command: |
      mkdir -p /var/app/current
      touch /var/app/current/db.sqlite3
      chmod 666 /var/app/current/db.sqlite3
    leader_only: true
  02_makemigrations:
    command: |
      source /var/app/venv/*/bin/activate
      python manage.py makemigrations
    leader_only: true
  03_migrate:
    command: |
      source /var/app/venv/*/bin/activate
      python manage.py migrate
    leader_only: true
  04_createsu:
    command: |
      source /var/app/venv/*/bin/activate
      echo "from django.contrib.auth.models import User; User.objects.create_superuser('admin', 'admin@example.com', 'password123') if not User.objects.filter(username='admin').exists() else None" | python manage.py shell
    leader_only: true
  05_set_permissions:
    command: |
      chmod 666 /var/app/current/db.sqlite3
      chown webapp:webapp /var/app/current/db.sqlite3
    leader_only: true