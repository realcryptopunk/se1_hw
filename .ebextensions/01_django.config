option_settings:
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"  # Update this according to your settings module
    PYTHONPATH: "/var/app/current/mysite:$PYTHONPATH"  # Ensure this points to the correct path

  aws:elasticbeanstalk:container:python:
    WSGIPath: "mysite.wsgi:application"  # Update this according to your WSGI application path

  aws:autoscaling:launchconfiguration:
    RootVolumeType: gp3  # Use gp3 as root volume type
    DisableIMDSv1: true  # Disable IMDSv1, enforcing use of launch templates

  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/health"  # Modify this according to your app's health check path

  aws:autoscaling:trigger:
    MeasureName: CPUUtilization
    Statistic: Average
    Unit: Percent
    Period: "1"  # in minutes
    BreachDuration: "1"  # in minutes
    UpperThreshold: "70"  # Auto scaling will trigger at 70% CPU utilization
    LowerThreshold: "30"  # Auto scaling will scale down when CPU utilization drops below 30%
    EvaluationPeriods: "1"


container_commands:
  01_remove_db:
    command: "rm -f /var/app/current/db.sqlite3"
    ignoreErrors: true
  02_migrate:
    command: |
      source /var/app/venv/*/bin/activate
      python manage.py migrate
    leader_only: true
  03_create_superuser:
    command: |
      source /var/app/venv/*/bin/activate
      echo "from django.contrib.auth.models import User; User.objects.create_superuser('admin', 'admin@example.com', 'password123') if not User.objects.filter(username='admin').exists() else None" | python manage.py shell
    leader_only: true
  04_create_test_data:
    command: |
      source /var/app/venv/*/bin/activate
      echo "from django.utils import timezone; from polls.models import Question, Choice; 
      if not Question.objects.exists():
          q = Question.objects.create(question_text='What is your favorite color?', pub_date=timezone.now())
          q.choice_set.create(choice_text='Red', votes=0)
          q.choice_set.create(choice_text='Blue', votes=0)
          q.choice_set.create(choice_text='Green', votes=0)" | python manage.py shell
    leader_only: true