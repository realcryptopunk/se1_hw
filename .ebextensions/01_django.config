option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: mysite.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: mysite.settings
    PYTHONPATH: /var/app/current
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static

container_commands:
  01_remove_db:
    command: "rm -f /var/app/current/db.sqlite3"
    ignoreErrors: true
  02_migrate:
    command: |
      source /var/app/venv/*/bin/activate
      python manage.py migrate
    leader_only: true
  03_create_superuser:
    command: |
      source /var/app/venv/*/bin/activate
      echo "from django.contrib.auth.models import User; User.objects.create_superuser('admin', 'admin@example.com', 'password123') if not User.objects.filter(username='admin').exists() else None" | python manage.py shell
    leader_only: true
  04_create_test_data:
    command: |
      source /var/app/venv/*/bin/activate
      echo "from django.utils import timezone; from polls.models import Question, Choice; 
      if not Question.objects.exists():
          q = Question.objects.create(question_text='What is your favorite color?', pub_date=timezone.now())
          q.choice_set.create(choice_text='Red', votes=0)
          q.choice_set.create(choice_text='Blue', votes=0)
          q.choice_set.create(choice_text='Green', votes=0)" | python manage.py shell
    leader_only: true